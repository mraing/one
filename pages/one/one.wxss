/* pages/one/one.wxss */
page, .container {
  height:100%;
}
.header_text {
  width:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  position:absolute;
  top:0;
  height:250px;
}
.header_text > text {
  font-size:18px;
  color:#FFFFFF;
  font-weight:200;
}

.navigator {
  background-color: rgba(3, 169, 244, 0);
  height: 44px;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  flex-direction: row;
}
.leftButton {
  width: 50px;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container {
  margin-top: -64px;
  width: 100%;
  left: 0;
  bottom: 0;
  position: absolute;
}
.title {
  height: 44px;
  /* margin-right: 50px; */
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title > text {
  font-size: 32rpx;
  color: #FFF;
  font-weight: 500;
}
.header_image {
  width: 100%;
  height: 250px;
  margin-bottom:10rpx;
}


.oneMain{
  background-color: #f6f6f6;
}
.onMain-header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 140rpx;
  text-align: center;
  line-height: 170rpx;
  font-size: 36rpx;
  color: #000;
  /* opacity: 0.6; */
  background-color: #fff;
  overflow: hidden;
  z-index: 99;
}
.oneList{
  padding: 20rpx 0;
  margin: 0 0 0.5em 0;
  box-shadow: 0 0.0625em 0 0 rgba(230, 230, 230, 0.5);
  padding-bottom: 50rpx;
  background-color:#fff;
}
.oneList:first-child{
  padding-top: 0;
}
.oneList:last-child{
  margin: 0;
}
.one-date{
  margin-bottom: 10rpx;
  font-family: 'Courier New';
  font-size: 48rpx;
  line-height: 50rpx;
  text-align: center;
  opacity: 0.6;
  color: #000;
}
.one-flex{
  margin-bottom: 10rpx;
  display: flex;
  justify-content:space-around;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: center;
  color: #808080;
}
.one-journals{
  margin-bottom: 10rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: center;
  color: #808080;
}
.one-img{
  margin: 20rpx 0;
}
.one-img>image{
  width: 100%;
  vertical-align: top;
}
.one-content{
  margin: 0 40rpx;
  margin-top: 40rpx;
  margin-bottom: 36rpx;
  font-size: 28rpx;
  line-height: 52rpx;
  color: #000;
  opacity: 0.6;
}
.one-author{    
  margin: 0 40rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  text-align: center;
  color: #808080;
}